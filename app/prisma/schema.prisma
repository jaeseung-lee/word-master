generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Language {
  LANGUAGE_UNSPECIFIED
  LANGUAGE_ENGLISH
  LANGUAGE_KOREAN
  LANGUAGE_JAPANESE
}

model user {
  id            Int      @id @default(autoincrement())
  name          String   @db.VarChar(255)
  email         String   @db.VarChar(255)
  password      String   @db.VarChar(255)
  open_ai_api_key String   @db.VarChar(255) @default("")
  create_time   DateTime @default(now())
  update_time   DateTime @updatedAt

  sentence_list sentence[]
  word_list word[]
}

model sentence {
  id            Int      @id @default(autoincrement())
  text          String   @db.Text @default("")
  definition    String   @db.Text @default("")
  explanation   String   @db.Text @default("")
  language      Language @default(LANGUAGE_JAPANESE)
  is_bookmarked Boolean  @default(false)
  author_id       Int
  author          user     @relation(fields: [author_id], references: [id])

  create_time   DateTime @default(now())
  update_time   DateTime @updatedAt

  word_list word[]

  @@index([text])
  @@index([is_bookmarked])
  @@index([author_id])
}

model word {
  id            Int      @id @default(autoincrement())
  text          String   @db.VarChar(255)
  definition    String   @db.Text @default("")
  language      Language @default(LANGUAGE_JAPANESE)
  is_bookmarked Boolean  @default(false)
  explanation   String   @db.Text @default("")
  author_id       Int
  author          user     @relation(fields: [author_id], references: [id])

  sentence_id   Int
  sentence      sentence @relation(fields: [sentence_id], references: [id])
  create_time   DateTime @default(now())
  update_time   DateTime @updatedAt

  @@index([text])
  @@index([is_bookmarked])
  @@index([author_id])
}
